{% extends '::layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block content %}

<div class="col-md-2"></div>
<div class="col-md-8 well">

<form action="{{ path('fos_user_security_check') }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" required="required" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">    
            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
    </div>
</form>
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <p>Pas de compte ? Inscrivez vous <span class="glyphicon glyphicon-log-in"></span><a href="{{path('fos_user_registration_register')}}"> ICI</a></p>
    </div>
    {% if error %}
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" id="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
</div>
<div class="col-md-2"></div>
{% endblock %}