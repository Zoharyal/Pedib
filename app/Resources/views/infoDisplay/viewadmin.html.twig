{% extends "layout.html.twig" %}
{% block content %}

    <h3>Le {{ advert.date|date('d/m/Y') }} par {{advert.user.username}}</h3>
    <div class="well">
        <h4>Information : </h4>
        <p> Adresse : {{ advert.user.address }}</p>
        <p> Nombre d'enfants : {{ advert.nbchild }}</p>
        <p> Contact : {{ advert.user.email }} / {{ advert.user.phone }}</p>
        <h4> Description : </h4>
        <p> {{advert.content}} </p>
    </div>
<button type="button" class="btn btn-info"><a href="{{path('editadvert')}}" class="view" >Editer</a></button>
<button type="button" class="btn btn-danger"><a href="{{path('deleteadvert', {id:advert.id})}}" class="view">Supprimer</a></button>
{% if app.user.planningday == null %}
<button type="button" class="btn btn-primary"><a href="{{path('planningsub', {id:advert.planning.id})}}" class="view">Inscription Planning</a></button>
{% endif %}
{% endblock %}
